<%= simple_form_for @category do |f| %>
    <%= f.input :name, label: 'Name of category', error: 'Username is mandatory, please specify one'%>
    <%= f.file_field :image %> 
    <%= f.submit %>
    <br>
    <%= link_to "Reset", new_category_path %>
    <%= link_to "List of category", categories_path %>
<% end %>